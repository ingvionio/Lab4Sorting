<Window x:Class="Lab4Sorting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

        Title="Выбор задания" Height="300" Width="300" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="LightGreen" SecondaryColor="Lime" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Content="Задание 1: Внутренняя сортировка" Margin="10" Click="ButtonTask1_Click" Name="ButtonTask1"/>
            <Button Content="Задание 2: Внешняя сортировка" Margin="10" Click="ButtonTask2_Click" Name="ButtonTask2"/>
            <Button Content="Задание 3: Сортировка слов" Margin="10" Click="ButtonTask3_Click" Name="ButtonTask3"/>
        </StackPanel>
    </Grid>
</Window>