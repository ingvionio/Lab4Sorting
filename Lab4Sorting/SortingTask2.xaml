<Window x:Class="Lab4Sorting.SortingTask2"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание 1: Внутренняя сортировка" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Canvas x:Name="SortCanvas" Grid.Column="0" Margin="10"/>
        <!-- Canvas для столбиков -->

        <StackPanel Grid.Column="1" Margin="10">
            <Button x:Name="LoadExcelButton" Content="Загрузить Excel" Click="LoadExcelButton_Click" Margin="5"/>
            <ComboBox x:Name="ExcelColumnComboBox" Margin="5" Width="200" />
            <TextBox x:Name="LogTextBox" Margin="10" Height="200" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <RadioButton Name="DirectMergeSortRadioButton" Content="Прямое слияние"/>
                <RadioButton Name="NaturalMergeSortRadioButton" Content="Естественное слияние"/>
                <RadioButton Name="MultiwayMergeSortRadioButton" Content="Многопутевое слияние"/>
            </StackPanel>
            <Button x:Name="StartSorting" Content="Начать сортировку" Click="StartSorting_Click" Margin="5"/>
            <Label x:Name="DelayLabel" Content="Задержка: 500 мс"/>
            <Slider x:Name="DelaySlider" Minimum="5" Maximum="2000" Value="500" TickFrequency="10" ValueChanged="DelaySlider_ValueChanged" Margin="5"/>
        </StackPanel>


    </Grid>
</Window>